<%- include('header') -%>
</head>
<body>

<%- include('nav') -%>

<div class="ui right fixed vertical text menu">
  	<div class="item"><button class="circular ui icon green button">
  		<i class="icon wechat"></i>
	</button></div>
	<div class="item"><button class="circular ui icon red button">
  		<i class="icon weibo"></i>
	</button></div>
	<div class="item"><button class="circular ui icon blue button">
  		<i class="icon qq"></i>
	</button></div>
</div>


<div id="article" class="ui text container">
	<article-full v-bind:data="data"></article>
</div>

<script type="text/javascript">
	Vue.component('article-full', {
		template: '\
			<div class="ui basic segment">\
				<h1 class="ui header">\
					<a v-bind:href="data.url">{{data.title}}</a>\
					<div class="sub header">\
						{{data.year}}-{{data.month}}-{{data.day}} {{data.hour}}:{{data.minute}}\
						<i class="unhide icon"></i>{{data.views}}\
						<i class="comment icon"></i>{{data.comments}}\
						<i class="tag icon"></i>{{categoriesStr}}\
					</div>\
				</h1>\
				<h4 class="ui horizontal divider header">Content</h4>\
				<h3 class="ui header">{{data.text}}</h3>\
			</div>\
			',
		props: ['data'],
		computed: {
			categoriesStr: function() {
				return this.data.categories? this.data.categories.join(','): 'Uncategorized';
			}
		}
	});

	new Vue({
		el: '#article',
		data: {
			data: {}
		},
		created: function() {
			this.fetchData();
		},
		methods: {
			fetchData: function() {
				var _self = this;
				$.get("/article/test",function(data,status){
					_self.data = data.data;
				});
				console.log(this.data);
			}
		}
	})
</script>

<%- include('footer') -%>
