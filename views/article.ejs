<div id="article" class="ui text container">
	<article-full v-bind:data="data"></article>
</div>

<script type="text/javascript">
	Vue.component('article-full', {
		template: '\
			<div class="ui basic segment">\
				<h1 class="ui header">\
					<a v-bind:href="data.url">{{data.title}}</a>\
					<div class="sub header">\
						{{data.year}}-{{data.month}}-{{data.day}} {{data.hour}}:{{data.minute}}:{{data.second}}\
						<i class="unhide icon"></i>{{data.nvisits}}\
						<i class="comment icon"></i>{{data.ncomments}}\
						<i class="tag icon"></i>{{data.tag}}\
					</div>\
				</h1>\
				<h4 class="ui horizontal divider header">Content</h4>\
				<h3 class="ui header">{{data.text}}</h3>\
			</div>\
			',
		props: ['data']
	});

	new Vue({
		el: '#article',
		data: {
			data: {}
		},
		created: function() {
			this.fetchData();
		},
		methods: {
			fetchData: function() {
				var _self = this;
				$.get("/article/test",function(data,status){
					_self.data = data.data;
				});
				console.log(this.data);
			}
		}
	})
</script>

